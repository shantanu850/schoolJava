<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="@dimen/spacing_xmedium"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="06dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/activity_view_exams_exam_name"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exam Name"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp"
                    />

                <TextView
                    android:id="@+id/txt_exam_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="06dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subject"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp"
                    />

                <TextView
                    android:id="@+id/txt_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="06dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Deadline"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp"
                    />

                <TextView
                    android:id="@+id/txt_deadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="06dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Duration"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp"
                    />

                <TextView
                    android:id="@+id/txt_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="06dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next Re-take"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp"
                    />

                <TextView
                    android:id="@+id/txt_next_re_take"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="06dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Passmark"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp"
                    />

                <TextView
                    android:id="@+id/txt_passmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="06dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Questions"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp"
                    />

                <TextView
                    android:id="@+id/txt_quetions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="06dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exam Type"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp"
                    />

                <TextView
                    android:id="@+id/txt_exam_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="06dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exam Fee"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp"
                    />

                <TextView
                    android:id="@+id/txt_exam_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey_60"
                    android:textSize="14sp"
                    android:layout_marginLeft="06dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_error"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/spacing_medium"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/edit_status"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/orange_50"
                    android:text="test_status"
                    android:imeOptions="actionSearch"
                    android:maxLines="3"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="14sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lyt_error_attend"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/spacing_large"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/spacing_medium"
                    android:layout_height="0dp" />


                <TextView
                    android:id="@+id/edit_attende_status"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/orange_50"
                    android:text="attend status"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_enroll_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_enroll_num"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:background="@drawable/edit_text_round_bg_white"
                    android:hint="Enter your Enroll Number e.g EN-XXX-XXX-XXX"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:paddingLeft="@dimen/spacing_medium"
                    android:paddingRight="@dimen/spacing_medium" />
                <Button
                    android:id="@+id/btn_check_number"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded_accent"
                    android:text="Check Number"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:focusableInTouchMode="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/spacing_medium"
                    android:layout_height="0dp" />


                <Button
                    android:id="@+id/btn_begin_assessment"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded_primary"
                    android:text="Begin Assessment"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
